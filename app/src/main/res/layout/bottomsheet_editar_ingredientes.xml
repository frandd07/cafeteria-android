<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tituloIngrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar ingredientes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/inputNuevoIngrediente"
            app:startIconTint="@color/main_color"
            app:boxStrokeColor="@color/main_color"
            app:hintTextColor="@color/main_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nuevo ingrediente"
            android:inputType="textPersonName"/>

        <Button
            android:id="@+id/btnAñadirIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir"
            app:cornerRadius="8dp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/main_color"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerIngredientes"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <Button
        android:id="@+id/btnGuardarIngredientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios"
        android:layout_marginTop="12dp"
        app:cornerRadius="8dp"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/main_color"/>

</LinearLayout>
