<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Encabezado con fondo de color -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:orientation="horizontal"
            android:padding="16dp"
            android:backgroundTint="@color/main_color">

            <!-- Información del pedido -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPedidoId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pedido #123"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <TextView
                    android:id="@+id/tvFechaHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 abril, 10:30"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Badge de estado -->
            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_estado_pendiente"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Pendiente"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <!-- Datos del alumno con icono -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_user"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nerea Fernández Sánchez – 2ºESO A"
                    android:textSize="15sp"
                    android:textColor="#212121"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Línea separadora -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp"/>

            <!-- Encabezado de detalle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalle del pedido"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:layout_marginBottom="8dp"/>

            <!-- Contenedor del detalle del pedido -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F9F9F9"
                android:layout_marginBottom="12dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerDetallePedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:padding="8dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Línea separadora -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp"/>

            <!-- Fila de total y pagado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Total -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total del pedido"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4,50€"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <!-- Switch Pagado con fondo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F0F0F0">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchPagado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pagado"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="4dp"
                        app:thumbTint="@color/switch_thumb_tint"
                        app:trackTint="@color/switch_track_tint"
                        android:textColor="#757575"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Barra de acciones con fondo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="12dp"
            android:background="#F5F5F5">

            <!-- Botón Rechazar (visible cuando estado == "pendiente") -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRechazar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechazar"
                android:textColor="#F44336"
                app:rippleColor="#20F44336"/>

            <!-- Botón Aceptar (visible cuando estado == "pendiente") -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAceptar"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Aceptar"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"/>

            <!-- Botón Marcar como listo (visible cuando estado == "aceptado") -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnListo"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marcar como listo"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                tools:visibility="visible"/>

            <!-- Botón Marcar como recogido (visible cuando estado == "listo" y pagado) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecogido"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marcar como recogido"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>