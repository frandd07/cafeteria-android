<!-- res/values/themes.xml -->
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Cafeteriaandroid"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Botón elevado (Raised / Filled) -->
        <item name="materialButtonStyle">
            @style/Widget.MaterialComponents.Button
        </item>
        <!-- Botón outlined -->
        <item name="materialButtonOutlinedStyle">
            @style/Widget.MaterialComponents.Button.OutlinedButton
        </item>
        <!-- Botón de texto (TextButton) -->
        <item name="borderlessButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton
        </item>
    </style>

    <style name="Theme.Cafeteriaandroid"
        parent="Base.Theme.Cafeteriaandroid" />
</resources>
