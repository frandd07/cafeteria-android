<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Nuevo: TextAppearance para los ítems del NavigationView -->
    <style name="TitleFont" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/cinzel</item>
    </style>

    <style name="BodyFont" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/space_grotesk</item>
    </style>

    <!-- Para el título de la Toolbar -->
    <style name="TextAppearance.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/cinzel_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Para los items del NavigationView -->
    <style name="TextAppearance.NavMenuItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/cinzel_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


</resources>
